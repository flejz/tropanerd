<% post = @post %>
<div class="container">

  <div class="card full-padding" style="margin: 0 1em 0 1em;">
    <div class="card-block">
      <h4 class="card-title comic-box no-margin font-bangers" style="background-image: url(<%= post.image.url %>)">
        <div class="transitions scale">
		        <%= post.title %>
        </div>
      </h4>
    </div>


    <!-- <%= image_tag(post.image.url, :class => 'comic-box no-margin no-padding') %> -->

    <div class="card-block">
      <p class="card-text comic-box post no-margin bk-batman-armor"> <%= post.text.html_safe %> </p>
    </div>
    <div style="float: right; z-index: 1" class="comic-box red font-bangers small no-margin text-padding"><%= post.updated_at.strftime("%d/%m/%Y") %></div>
    <div style="float: right" class="comic-box blue font-bangers small no-margin text-padding"><%= post.created_from %></div>
  </div>
  <div class="clearfix"> </div>

</div>
